<?xml version="1.0" encoding="UTF-8"?>

<!--
    This file stores bootstrap properties needed by Connection Managers.
    Property names must be in the format: "prop.name.is.blah=value"
    That will be stored as:
        <prop>
            <name>
                <is>
                    <blah>value</blah>
                </is>
            </name>
        </prop>
-->
<!-- root element, all properties must be under this element -->
<es>
    <!-- Name of the cluster server to connect. This property is required. -->  
    <cluster>
    	<name>${es.cluster.name}</name>
    	
    	<nodes> 
    		<node1>${es.cluster.nodes.node1}</node1>
        	<node2>${es.cluster.nodes.node2}</node2>
        </nodes>
    </cluster>
    <indices>
    	<response>
	    	<shard>5</shard>
	    	<replica>1</replica>
    	</response>
    </indices>
    <client>
    	<transport>
    		<sniff>true</sniff>
    		<timeout>10s</timeout>
    	</transport>
    </client>
</es>
