<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
	<!-- TRACE, DEBUG, INFO, WARN, ERROR, ALL å’Œ OFF /ETdata/-->
	<property name="log.base" value="/BHUData/logs/unitlogs/msip-unit-vas/${provider.port}/vas" />
	<jmxConfigurator />

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date [%thread] %-5level %logger{15} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	<appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.base}.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.base}.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %-5level %logger{15} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>	

	<appender name="unitrequestfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.base}.unitrequest.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.base}.%d{yyyy-MM-dd_HH}.unitrequest.zip</FileNamePattern>
			<!-- keep 10 days history log
			<MaxHistory>10</MaxHistory>
			
			<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
		    	<MaxFileSize>100MB</MaxFileSize>
		   	</TimeBasedFileNamingAndTriggeringPolicy>
		   	 -->
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %-5level %logger{15} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	<appender name="unitfacadefile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.base}.unitrequest.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.base}.%d{yyyy-MM-dd_HH}.unitfacade.zip</FileNamePattern>
			<!-- keep 10 days history log
			<MaxHistory>10</MaxHistory>

			<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
		    	<MaxFileSize>100MB</MaxFileSize>
		   	</TimeBasedFileNamingAndTriggeringPolicy>
		   	 -->
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %-5level %logger{15} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<logger name="com.bhu.vas.rpc.service" additivity="false" level="INFO">
		<appender-ref ref="stdout" />
		<appender-ref ref="unitrequestfile" />
	</logger>

	<logger name="com.bhu.vas.rpc.facade" additivity="false" level="INFO">
		<appender-ref ref="stdout" />
		<appender-ref ref="unitfacadefile" />
	</logger>
	
	<root level="WARN">
		<appender-ref ref="stdout" />
		<!-- 
		<appender-ref ref="logfile" />
		 -->
	</root> 
</configuration>