<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
	<!-- TRACE, DEBUG, INFO, WARN, ERROR, ALL å’Œ OFF /ETdata/-->
	<!-- <property name="log.base" value="/BHUData/logs/unitlogs/msip-unit-devices/${provider.port}/devices" /> -->
	<Property name="wangan.reporting.status.base" 	value="/BHUData/bulogs/ualogs/" />
	<!-- <Property name="wangan.reporting.final.base" 	value="/BHUData/pa_portal/" /> -->
	<Property name="wangan.reporting.final.base" 	value="/BHUData/bulogs/ualogs/" />
	<jmxConfigurator />
	<timestamp key="curTime" datePattern="yyyyMMddHHmmss"/>

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date [%thread] %-5level %logger{15} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	
	<appender name="wanganlogfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${wangan.reporting.status.base}${curTime}.business-reporting</File>
		
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${wangan.reporting.final.base}business-reporting.%d{yyyyMMddHHmmss}%i</fileNamePattern>
      
      <timeBasedFileNamingAndTriggeringPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <!-- or whenever the file size reaches 100MB -->
        <maxFileSize>1KB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      
    </rollingPolicy>
    		
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date - %msg%n</pattern>
		</layout>
	</appender>

	<logger name="com.bhu.vas.rpc.log.TerminalStatusNotifyLogger" additivity="false" level="INFO">
		<appender-ref ref="wanganlogfile" />
	</logger>	
	
	<root level="WARN">
		<appender-ref ref="stdout" />
		<!-- 
		<appender-ref ref="logfile" />
		 -->
	</root> 
</configuration>