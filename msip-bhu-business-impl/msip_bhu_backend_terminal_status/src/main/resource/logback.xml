<!DOCTYPE configuration>
<configuration>
	<!-- TRACE, DEBUG, INFO, WARN, ERROR, ALL å’Œ OFF /ETdata/-->
	
	<Property name="status.base" 	value="/BHUData/bulogs/reid/" />
	<Property name="final.base" 	value="/BHUData/pa_portal/" />
	<!-- <Property name="status.base" 	value="E:/logs/" />
